<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View to Modify it -->
      <record model="ir.ui.view" id="view_custom_account_config_form_inherited">
            <field name="name">sale settings</field>
            <field name="model">res.config.settings</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr=".//div[@id='account_vendor_bills']" position="inside">
                        <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Discount Received Account</span>
                                    <div class="text-muted">
                                        This account type should not be receivable or payable.

                                    </div>
                                    <div class="text-muted">
<!--                                        <label string="Advance Payment Account" for="discount_payment_account_id"/>-->

                                        <field name="discount_payment_account_id"

                                               domain="[('company_id', '=', company_id), ('internal_type', '=', 'other'), ('reconcile', '=', True)]"
                                        />
                                    </div>
                                </div>
                            </div>
                    </xpath>
                </data>
            </field>
        </record>




</odoo>